#include <iostream>
#include <string>

int main() {

	int iErste;
	int iZweite;
	int iSumme;
	int iQuotient;
	double dSumme;
	double dQuotient;

	std::cout << "Bitte Erste Zahl eingeben." << std::endl;
	std::cin >> iErste;
	std::cout << "Bitte Zweite Zahl eingeben." << std::endl;
	std::cin >> iZweite;

	iSumme = iErste + iZweite;
	iQuotient= iErste / iZweite;
	dSumme = iErste + iZweite;
	dQuotient = iErste / iZweite;

	std::cout << "Die Summe von " << iErste << " und " << iZweite << " lautet (int) " << iSumme << " oder (double)" << dSumme << std::endl;
	std::cout << "Der Quotient von " << iErste << " durch " << iZweite << " lautet (int) " << iQuotient <<std::endl;

	return 0;
}
