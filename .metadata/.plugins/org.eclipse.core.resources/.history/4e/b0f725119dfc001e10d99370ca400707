#include <iostream>
#include <string>

int main() {

	int iErste;
	int iZweite;
	int iSumme;
	int iQuotient;
	double dSumme;
	double dQuotient;
	double dCSumme;
	double dCQuotient;


	std::cout << "Bitte Erste Zahl eingeben." << std::endl;
	std::cin >> iErste;
	std::cout << "Bitte Zweite Zahl eingeben." << std::endl;
	std::cin >> iZweite;

	iSumme = iErste + iZweite;
	iQuotient= iErste / iZweite;
	dSumme = iErste + iZweite;
	dQuotient = iErste / iZweite;
	dCSumme = (double) iErste + (double) iZweite;
	dCQuotient = (double) iErste / (double) iZweite;

	std::cout << "Die Summe von " << iErste << " und " << iZweite << " lautet (int) " << iSumme << " oder (double) " << dSumme << " oder (double mit Type Cast) " << dCSumme << std::endl;
	std::cout << "Der Quotient von " << iErste << " durch " << iZweite << " lautet (int) " << iQuotient << " oder (double) " << dQuotient << " oder (double mit Type Cast) " << dCQuotient << std::endl;

	return 0;
}
